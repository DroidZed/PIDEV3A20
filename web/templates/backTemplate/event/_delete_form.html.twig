<form method="post" action="{{ path('app_event_delete', {'idpost': event.idpost}) }}"
      onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline-block;">
<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.idpost) }}">
    <button class="btn btn-danger">Delete</button>
</form>
