{% extends 'back/base.html.twig' %}

{% block title %}Liste des Membre{% endblock %}

{% block body %}
    <h1>Liste des membres</h1>

    <div class="pcoded-search-box" style="position: relative; left: 500px">
        <input onkeyup="searchEnt()" type="text" id="searchEnt" class="form-control" placeholder="Search">
    </div>
    <a class="nav-link" href="{{ path('pdfMembre') }}">Generer un pdf</a>


    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Telephone</th>
            <th>Photo</th>
            <th>description</th>

        </tr>
        </thead>
        <tbody>
        {% for membre in membres %}
            <tr name="elements" id="{{'membre'~ membre.id}}">
                <td>{{ membre.id }}</td>
                <td>{{ membre.nom }}</td>
                <td>{{ membre.email }}</td>
                <td>{{ membre.tel }}</td>
                <td><a href="{{ asset('/Uploads/Images/' ~ membre.photo) }}"> {{ membre.photo }} </a></td>
                <td>{{ membre.descuser}}</td>
                <td>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    {% block js %}
        <script>
            function searchEnt() {
                let searchString = document.getElementById('searchEnt').value; // recuperation de l'input de la recherche
                const elements = document.getElementsByName('elements') //recuperation de la reference du dom (liste des tr)
                if (searchString.length!==0){
                    $.ajax({
                        url: 'listEntreprise/search/'+searchString,
                        success: function (data) {
                            console.log("data :",data)
                            for (let i = 0; i < elements.length; i++){
                                elements[i].style.display = "none";
                            }
                            for (let j = 0; j < data.length; j++) {
                                $('#membre'+data[j].id).show('slow');
                            }
                        },
                        error: function (xhr, textStatus, errorThrown) {
                            alert("erreur lors de la recuperation des donnÃ©es")
                        }
                    });
                }else{
                    for (let i = 0; i < elements.length; i++){
                        elements[i].style.display = "revert";
                    }
                }
            }
        </script>
    {% endblock %}
{% endblock %}
