
{% extends 'baseBack.html.twig' %}

{% block title %}  Event Details  {% endblock %}

{% block content %}

    <section class="section profile">
        <div class="row">
            <div class="col-xl-12">

                <div class="card">

                    <div class="card-body pb-0">
                        <div class="row">
                            <div class="col-lg-6">
                                <h5 class="card-title">{{ tbl_badge.namebadge }} <span> | Details </span></h5>
                            </div>
                        </div>

                        <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                                <img src="{{ asset('uploads/' ~ tbl_badge.photobadge) }}" alt="Profile">
                            <h2>{{ tbl_badge.namebadge }}</h2>
                        </div>


                        <div class="card-body pt-3">
                            <div class="tab-content pt-2">
                                <div class="tab-pane fade show active profile-overview" id="profile-overview">
                                    <h5 class="card-title">Description</h5>
                                    <p class="">{{ tbl_badge.descbadge }}</p>
                                </div>
                            </div>
                        </div>

                        <div>
                            <a href="{{ path('app_badge_edit', {'idbadge': tbl_badge.idbadge}) }}" class="btn btn-primary"> Edit </a>
                            {{ include('backTemplate/badge/_delete_form.html.twig') }}
                        </div>
                        <a href="{{ path('app_badge_index') }}">back to list</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
