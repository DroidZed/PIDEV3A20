{% extends 'base.html.twig' %}

{% block body %}
    <div style="display: flex;align-items: center;justify-content: center">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Ajouter une offre:</h5>

                <!-- General Form Elements -->
                {{ form_start(f) }}
                <label for="inputText" class="col-sm-4 col-form-label">title</label>
                <div class="col-sm-10">
                    {{ form_widget(f.titleOffer,{'attr':{'class':'form-control'}}) }}
                </div>

                <label for="inputText" class="col-sm-8 col-form-label">Type</label>
                <div class="col-sm-10">
                    {{ form_widget(f.TypeOffer,{'attr':{'class':'form-control'}}) }}
                </div>

                <label for="inputText" class="col-sm-8 col-form-label">Description</label>
                <div class="col-sm-10">
                    {{ form_widget(f.descoffer,{'attr':{'class':'form-control'}}) }}
                </div>
                <label for="inputDate" class="col-sm-2 col-form-label">startDate</label>
                <div class="col-sm-10">

                    {{ form_widget(f.startDTM,{'attr':{'class':'form-control'}}) }}
                </div>
                <label for="inputDate" class="col-sm-8 col-form-label">endDTM</label>
                <div class="col-sm-10">
                    {{ form_widget(f.endDTM,{'attr':{'class':'form-control'}}) }}
                </div>
                <label for="inputText" class="col-sm-8 col-form-label">salaryOffer</label>
                <div class="col-sm-10">
                    {{ form_widget(f.salaryOffer,{'attr':{'class':'form-control'}}) }}
                </div>
                <label for="inputText" class="col-sm-8 col-form-label">regionOffer</label>
                <div class="col-sm-10">
                    {{ form_widget(f.regionOffer,{'attr':{'class':'form-control'}}) }}
                </div>
                <label for="inputText" class="col-sm-8 col-form-label">addressOffer</label>
                <div class="col-sm-10">
                    {{ form_widget(f.addressOffer,{'attr':{'class':'form-control'}}) }}
                </div>

                <br>
                <div class="col-sm-10">
                    {{ form_widget(f.Submit,{'attr':{'class':'btn btn-primary'}}) }}

                </div>


                {{ form_end(f) }}

            </div>


        </div>

    </div>

    <br><br><br><br><br>

{% endblock %}